package basketball.stats.enums;

import java.util.ArrayList;
import java.util.List;

public enum EventDetail {

    SUBSTITUTION_IN, SUBSTITUTION_OUT,

    MADE_SHOT_FREE_THROW, MISSED_SHOT_FREE_THROW,

    FAST_BREAK,

    MADE_SHOT_CENTER_THREE, MADE_SHOT_DUNK, MADE_SHOT_FAR_THREE, MADE_SHOT_FAR_TOP_OF_KEY, MADE_SHOT_LAYUP, MADE_SHOT_LEFT_CORNER_THREE, MADE_SHOT_LEFT_DIAGONAL_THREE, MADE_SHOT_LEFT_FAR_BASELINE, MADE_SHOT_LEFT_FAR_DIAGONAL, MADE_SHOT_LEFT_FAR_MID, MADE_SHOT_LEFT_FAR_POST, MADE_SHOT_LEFT_NEAR_BASELINE, MADE_SHOT_LEFT_NEAR_DIAGONAL, MADE_SHOT_LEFT_NEAR_MID, MADE_SHOT_LEFT_NEAR_POST, MADE_SHOT_NEAR_TOP_OF_KEY, MADE_SHOT_RIGHT_CORNER_THREE, MADE_SHOT_RIGHT_DIAGONAL_THREE, MADE_SHOT_RIGHT_FAR_BASELINE, MADE_SHOT_RIGHT_FAR_DIAGONAL, MADE_SHOT_RIGHT_FAR_MID, MADE_SHOT_RIGHT_FAR_POST, MADE_SHOT_RIGHT_NEAR_BASELINE, MADE_SHOT_RIGHT_NEAR_DIAGONAL, MADE_SHOT_RIGHT_NEAR_MID, MADE_SHOT_RIGHT_NEAR_POST,

    MISSED_SHOT_CENTER_THREE, MISSED_SHOT_DUNK, MISSED_SHOT_FAR_THREE, MISSED_SHOT_FAR_TOP_OF_KEY, MISSED_SHOT_LAYUP, MISSED_SHOT_LEFT_CORNER_THREE, MISSED_SHOT_LEFT_DIAGONAL_THREE, MISSED_SHOT_LEFT_FAR_BASELINE, MISSED_SHOT_LEFT_FAR_DIAGONAL, MISSED_SHOT_LEFT_FAR_MID, MISSED_SHOT_LEFT_FAR_POST, MISSED_SHOT_LEFT_NEAR_BASELINE, MISSED_SHOT_LEFT_NEAR_DIAGONAL, MISSED_SHOT_LEFT_NEAR_MID, MISSED_SHOT_LEFT_NEAR_POST, MISSED_SHOT_NEAR_TOP_OF_KEY, MISSED_SHOT_RIGHT_CORNER_THREE, MISSED_SHOT_RIGHT_DIAGONAL_THREE, MISSED_SHOT_RIGHT_FAR_BASELINE, MISSED_SHOT_RIGHT_FAR_DIAGONAL, MISSED_SHOT_RIGHT_FAR_MID, MISSED_SHOT_RIGHT_FAR_POST, MISSED_SHOT_RIGHT_NEAR_BASELINE, MISSED_SHOT_RIGHT_NEAR_DIAGONAL, MISSED_SHOT_RIGHT_NEAR_MID, MISSED_SHOT_RIGHT_NEAR_POST,

    TURNOVER_BAD_PASS, TURNOVER_STOLEN, TURNOVER_OTHER;

    public static EventDetail[] getEventDetails(final EventType type) {
        final List<EventDetail> details = new ArrayList<EventDetail>();
        for (final EventDetail detail : EventDetail.values()) {
            if (detail.toString().startsWith("MISSED_SHOT") && type.toString().equals("BLOCK")) {
                details.add(detail);
            } else if (detail.toString().startsWith("MADE_SHOT") && type.toString().equals("MADE_ASSISTED_SHOT")) {
                details.add(detail);
            } else if (detail.toString().startsWith(type.toString())) {
                details.add(detail);
            }
        }
        return details.toArray(new EventDetail[0]);
    }
}
